<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>isVirtualSelected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(Event_Type__c) = &quot;Virtual&quot;, NOT(ISBLANK(Location__c)))</errorConditionFormula>
    <errorMessage>The &apos;Location&apos; field must be left blank when the &apos;Event Type&apos; is set to &apos;Virtual&apos;.</errorMessage>
</ValidationRule>
