<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>inPerson</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(Event_Type__c) = &quot;In-Person&quot;, ISBLANK(Location__c))</errorConditionFormula>
